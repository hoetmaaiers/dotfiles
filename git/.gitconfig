	name = Robin Houdmeyers
	email = robin.houdmeyers@vito.be
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIJxLjeb/q0rYCoav9hUMsTdyi6kTagAOppbUGTx/U4wb
[core]
	editor = vim
	symlinks = True
[color]
	ui = true
	diff = auto
	status = auto
	branch = auto
[init]
	defaultBranch = main
[alias]
	ls = "!f() { git log $1 --pretty=format:\"%C(yellow)%h%Cred%d\\\\ %Creset%s%Cgreen\\\\ [%ae,%ar]\" --decorate --graph; }; f"
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true


[remote "origin"]
	prune = true
[gpg]
	format = ssh
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[commit]
	gpgsign = true
